{
	"name": "colostle-companion",
	"private": true,
	"version": "0.0.0",
	"type": "commonjs",
	"scripts": {
		"dev:ui": "cd ui && vite",
		"build:ui": "cd ui && tsc -b && vite build",
		"dev:api": "nodemon --watch 'api/**/*.ts' --exec 'ts-node' api/index.ts",
		"start:api": "ts-node api/index.ts",
		"dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
		"build": "npm run build:ui && tsc -p api/tsconfig.json",
		"start": "node dist/api/index.js",
		"lint": "eslint .",
		"test": "jest",
		"migrate:create": "db-migrate create --config api/config/database.json",
		"migrate:up": "db-migrate up --config api/config/database.json",
		"migrate:down": "db-migrate down --config api/config/database.json",
		"seed": "ts-node api/scripts/seed.js"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"db-migrate": "^0.11.14",
		"db-migrate-pg": "^1.5.0",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0",
		"pg": "^8.11.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"swagger-ui-express": "^5.0.0",
		"winston": "^3.11.0",
		"yamljs": "^0.3.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.11",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.10.5",
		"@types/pg": "^8.11.4",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@types/supertest": "^2.0.16",
		"@types/swagger-ui-express": "^4.1.6",
		"@types/yamljs": "^0.2.34",
		"@vitejs/plugin-react-swc": "^3.8.0",
		"concurrently": "^8.2.2",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^15.15.0",
		"jest": "^29.7.0",
		"nodemon": "^3.0.2",
		"prettier": "^3.1.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"typescript": "~5.7.2",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.2.0"
	}
}
